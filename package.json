    "copyfiles": "^2.4.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "https": "^1.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.6.0",
    "typescript": "^4.3.5"
  },
